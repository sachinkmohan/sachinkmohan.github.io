---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<div class="blog-card">
  <a class="border-b-2 text-h5 border-indigo-500" href={`/blog/${post.id}`}
    >{post.data.title}</a
  >
  <div class="metadata">
    <p class="text-gray-600">
      {
        new Date(post.data.date).toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </p>
    <span class="vertical-separator"></span>
    <p class="flex gap-2">
      {post.data.tags.map((tag) => <span class="tag-badge">{tag}</span>)}
    </p>
  </div>
  <p class="description">{post.data.description}</p>
</div>

<style>
  .blog-card {
    .tag-badge {
      /* Modified: Using CSS variable for theming consistency */
      background-color: var(--tag-bg, lightgray);
      padding: 0 0.25rem;
      border-radius: 0.375rem;
    }
    .metadata {
      display: flex;
      gap: 30px;
      align-items: center;

      .vertical-separator {
        width: 1px;
        height: 30px;
        background-color: var(--dark);
      }

      @media screen and (max-width: 600px) {
        & {
          flex-direction: column;
          gap: 2px;
          align-items: start;
          margin-bottom: 10px;
          margin-top: 16px;

          * {
            margin: 0;
          }

          .vertical-separator {
            height: 0;
            display: none;
          }
        }
      }
    }
    .description {
      font-size: 16px;
      color: var(--dark);
      margin-top: 0px;
      margin-bottom: 40px;
    }
  }
</style>
