---
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Sachin K Mohan</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  :root {
    --primary: #402eff;
    --secondary: #f8f9ff;
    --white: #ffffff;
    --dark: #21243d;
    --light: #8695a4;
    /* Added: Tag badge background color for consistent theming */
    --tag-bg: #d1d5db; /* gray-300 equivalent */
  }

  /* Added: Global heading styles using Tailwind 4 theme variables */
  /* These apply to all headings across the entire site */
  h1 {
    font-size: var(--text-h1);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--dark);
  }

  h2 {
    font-size: var(--text-h2);
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 0.875rem;
    color: var(--dark);
  }

  h3 {
    font-size: var(--text-h3);
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: var(--dark);
  }

  h4 {
    font-size: var(--text-h4);
    font-weight: 600;
    line-height: 1.45;
    margin-bottom: 0.625rem;
    color: var(--dark);
  }

  h5 {
    font-size: var(--text-h5);
    font-weight: 600;
    line-height: 1.5;
    margin-bottom: 0.5rem;
    color: var(--dark);
  }

  h6 {
    font-size: var(--text-h6);
    font-weight: 600;
    line-height: 1.55;
    margin-bottom: 0.5rem;
    color: var(--dark);
  }

  /* Added: Responsive headings for mobile devices */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem; /* 32px */
    }

    h2 {
      font-size: 1.75rem; /* 28px */
    }

    h3 {
      font-size: 1.5rem; /* 24px */
    }

    h4 {
      font-size: 1.25rem; /* 20px */
    }

    h5 {
      font-size: 1.125rem; /* 18px */
    }

    h6 {
      font-size: 1rem; /* 16px */
    }
  }
</style>
